package assignment3;

public class Camera {

	private final Ray eye;
	private final Vector up;

	public Camera(Ray eye, Vector up) {
		super();
		this.eye = eye;
		this.up = up;
	}

	public Ray getEye() {
		return eye;
	}

	public Vector getUp() {
		return up;
	}

	@Override
	public String toString() {
		return "Camera [eye=" + eye + ", up=" + up + "]";
	}

}
