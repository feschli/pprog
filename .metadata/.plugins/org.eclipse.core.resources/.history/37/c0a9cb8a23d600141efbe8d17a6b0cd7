package exercise2;

public class AddNumbers {

	private final int[] arr;

	public AddNumbers(int[] arr) {
		this.arr = arr;
	}

	public int add() {
		int result = 0;

		for (int i = 0; i < arr.length; i++) {
			result = result + arr[i];
		}
		return result;
	}

	public int[] getArr() {
		return arr;
	}

	public static void main(String[] args) {
		int[] numbers = { 1, 2, 3, 4 };

		AddNumbers obj = new AddNumbers(numbers);
		
		System.out.println(obj.add());

	}

}
